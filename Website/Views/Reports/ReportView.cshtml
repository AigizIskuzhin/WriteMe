@model Website.ViewModels.PostReportViewModel
@{
    Layout = null;
}
<li id="report-@Model.Id" class="report" report-id="@Model.Id"  post-id="@Model.PostId" sender-id="@Model.SenderId">
    <div class="report_title">
        <div class="report_sender report_title_item">
            <a href="/profile?id=@Model.SenderId">
                Отправитель: @Model.SenderName
            </a>
        </div>  
        <div class="report_target report_title_item">
            <a href="/profile?id=@Model.postownerid#post-@Model.PostId">
                Запись
            </a>
        </div>
        <div class="report_type report_title_item">
            @Model.ReportType
        </div>
        <div class="report_state report_title_item">
            @Model.ReportState
        </div>
    </div>
    <div class="report_content">
        <div class="report_sender_msg">
            <div>
                Комментарий:
            </div>
            <div>
                @Model.Commentary
            </div>
        </div>
        <form asp-action="CloseReport">
            <input type="hidden" name="reportId" value="@Model.Id" />
            <input type="submit" value="Закрыть жалобу" class="report-close" />
        </form>
        <form asp-action="CloseReportAndDeletePost">
            <input type="hidden" name="reportId" value="@Model.Id"/>
            <input type="submit" value="Удалить пост и закрыть жалобу" class="report-close-delete"/>
        </form>
    </div>
</li>