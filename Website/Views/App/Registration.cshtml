@model Website.ViewModels.AuthorizationViewModel
@{
    Layout = null;
}
<h2>Регистрация</h2>
<form asp-action="Registration" asp-controller="App" asp-anti-forgery="true">
    <div asp-validation-summary="ModelOnly"></div>
    @if (Model == null)
    {
        <div>
            <div>
                <label asp-for="MailAddress">Введите Email</label>
                <input type="text" asp-for="MailAddress" />
                <span asp-validation-for="MailAddress" />
            </div>
            <div>
                <input type="submit" value="Войти" />
            </div>
        </div>
    }
    else
    {
        <div>
            <div>
                <label asp-for="Password">Введите пароль</label>
                <input asp-for="Password" />
                <span asp-validation-for="Password" />
            </div>
            <div>
                <input type="submit" value="Войти" />
            </div>
        </div>
    }
</form>
<a asp-action="Authorization" asp-controller="App">Авторизация</a>