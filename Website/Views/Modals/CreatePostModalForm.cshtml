@model Website.ViewModels.Profile.PostViewModel
@{  
    Layout = null;
    bool isEditing = Model.OwnerId != 0 && Model.Id != 0;
    string title = !isEditing ? "Создать новый пост" : "Отредактировать пост";
}
<div class="modal_background close-modal">
</div>
<div class="modal_content">
    <div class="modal_close close-modal" title="Close">
        <i class='bx bx-x'></i>
    </div>

    <h1 class="modal_title">@title</h1>
    @*<p class="modal_description">Введите параметры</p>*@
    <input asp-for="Title" class="ui_control_item" style="width: 100%; padding: 12px;" placeholder="Заголовок" />
    <textarea asp-for="Description" class="ui_control_item" style="width: 100%; height: 80px; min-height: 80px; height: auto; margin-top: 20px; padding: 12px; resize: vertical" placeholder="Текст"></textarea>
    @if (!isEditing)
    {
        <input id="create_post_btn" class="modal_button" style="margin-top: 20px;" type="submit" value="Создать" />
    }
    else
    {
        <input type="hidden" asp-for="OwnerId" />
        <input type="hidden" asp-for="Id" />
        <input id="edit_post_btn" class="modal_button" style="margin-top: 20px;" type="submit" value="Отредактировать" />
    }
    @*<div class="modal_button-link close-modal">
            Закрыть
        </div>*@
</div>

