@model Website.ViewModels.PostReportViewModel
@{
    Layout = null;
}
<div class="modal_background close-modal">
</div>
<div class="modal_content">
    <div class="modal_close close-modal" title="Close">
        <i class='bx bx-x'></i>
    </div>

    <h1 class="modal_title">Отправить жалобу на запись</h1>
    <select id="report_types">
        @foreach (var reportType in Model.ReportTypes)
        {
            <option value="@reportType.Id">@reportType.Name</option>
        }
    </select>
    <textarea id="report_msg" class="ui_control_item" style="width: 100%; height: 80px; min-height: 80px; height: auto; margin-top: 20px; padding: 12px; resize: vertical" placeholder="Текст"></textarea>
    <input id="send_report" class="modal_button" style="margin-top: 20px;" type="submit" value="Пожаловаться" />
    <input type="hidden" asp-for="PostId" />
</div>