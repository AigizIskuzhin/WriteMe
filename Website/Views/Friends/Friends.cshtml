@using Website.Infrastructure.Extensions
@model IEnumerable<Website.ViewModels.Friends.FriendViewModel>
<link rel="stylesheet" href="~/Resources/css/friends.css" />
<script src="Resources/js/profile.js"></script>
@{
    var queryId = Context.Request.Query["id"].ToString();
    string profileId = String.IsNullOrWhiteSpace(queryId) ? Context.GetConnectedUserId() : queryId;
}
<div style="display: flex; height: 100%;">
    <div class="ui_70">
        <div class="ui_header">
            @*<div style="position: absolute; top:-5px; height: calc(100% + 15px); width: 100%; background: white; z-index: 1; "></div>*@
            <div id="ui_post_search_block" @*class="expanded"*@>
                <svg id="search_icon" fill="#000000" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 50 50" width="20px" height="20px"><path d="M 21 3 C 11.601563 3 4 10.601563 4 20 C 4 29.398438 11.601563 37 21 37 C 24.355469 37 27.460938 36.015625 30.09375 34.34375 L 42.375 46.625 L 46.625 42.375 L 34.5 30.28125 C 36.679688 27.421875 38 23.878906 38 20 C 38 10.601563 30.398438 3 21 3 Z M 21 7 C 28.199219 7 34 12.800781 34 20 C 34 27.199219 28.199219 33 21 33 C 13.800781 33 8 27.199219 8 20 C 8 12.800781 13.800781 7 21 7 Z"></path></svg>
                <input id="ui_friends_search_input" class="ui_control_item ui_search_input" type="text" placeholder="Искать">
            </div>
        </div>
        <ul id="friends" class="friends">
            @await Html.PartialAsync("FriendsView", Model)
        </ul>
    </div>

    <div class="friends_links">
        <a class="ui_control_item ui_btn ui_btn-selected" href="/friends">
            Друзья
        </a>
        <a class="ui_control_item ui_btn" href="/friends/incoming">
            Входящие заявки
        </a>
        <a class="ui_control_item ui_btn" href="/friends/outgoing">
            Исходящие заявки
        </a>
    </div>
</div>
<script>
    $(document).ready(function () {
        SearchUsers('ui_friends_search_input', 'friends', '@Url.Action("SearchFriends")', '@profileId');
    });
</script>
